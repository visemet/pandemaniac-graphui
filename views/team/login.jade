extends ../layout

block content
  .container
    form.form-horizontal(action='/login', method='post')
      .control-group
        label.control-label(for='username') Team Name
        .controls: input(type='text',
                         id='username',
                         name='username',
                         placeholder='Team name')
      .control-group
        label.control-label(for='password') Password
        .controls: input(type='password',
                         id='password',
                         name='password',
                         placeholder='Password')
      .control-group
        .controls: input.btn.btn-primary(type='submit', value='Log In')
